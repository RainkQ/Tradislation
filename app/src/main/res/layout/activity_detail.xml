<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#33666666"
        android:scrollbars="none"
        android:fitsSystemWindows="true"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activities.TypeActivity">


        <android.support.v7.widget.CardView
                android:id="@+id/search_card"

                android:transitionName="searchCard"

                android:layout_margin="16dp"
                app:cardCornerRadius="24dp"
                android:elevation="36dp"
                app:cardBackgroundColor="@color/theme_lgray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/search_img"
                        android:background="@drawable/search_black"
                        android:layout_height="60dp"
                        android:layout_width="60dp"/>

                <EditText
                        android:id="@+id/search_text"
                        android:maxLines="1"
                        android:textSize="25sp"
                        android:focusable="false"
                        android:hint="Anything to search..."
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:inputType="text"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView


                android:transitionName="bottom"

                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="24dp"
                android:elevation="36dp"
                app:cardBackgroundColor="@color/theme_lgray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="80">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="470dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="12dp"
                    android:clipChildren="false"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/back_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/ic_back_black" />

                    <TextView
                        android:id="@+id/spelling"
                        android:layout_width="264dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="ri chu"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/item_chi"
                            android:layout_width="match_parent"
                            android:layout_height="57dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/kaishu1"
                            android:text="日出"
                            android:textColor="#111"
                            android:textSize="53sp"
                            android:transitionName="detailChi" />


                    </LinearLayout>


                    <TextView
                            android:id="@+id/item_eng"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:text="lkdajfoaisjdfkajsdfoaijsdflaksjdflaksjdflaksjdflkjds"
                            android:textAlignment="textStart"
                            android:textColor="#333"
                            android:textSize="23sp"
                            android:transitionName="detailEng" />

                    <TextView
                            android:id="@+id/item_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="lkdajfoaisjdfkajsdfoaijsdflaksjdflaksjdflaksjdflkjds"
                            android:gravity="top"
                            android:textColor="#444"
                            android:textSize="17sp" />


                    <com.yarolegovich.discretescrollview.DiscreteScrollView
                            android:id="@+id/item_pic_Pager"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_height="220dp"
                            android:orientation="horizontal">


                    </com.yarolegovich.discretescrollview.DiscreteScrollView>


                </LinearLayout>

                <TextView
                    android:id="@+id/item_bigtype_back"
                    android:layout_width="wrap_content"
                    android:layout_height="373dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/kaishu1"
                    android:text="画"
                    android:textColor="#40757575"
                    android:textSize="200sp" />


            </FrameLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
