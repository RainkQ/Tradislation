<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_back"
        tools:context=".activities.MainActivity"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            android:elevation="24dp"
            app:cardBackgroundColor="@color/transparent"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                <ImageView
                        android:id="@+id/search_img"
                        android:background="@drawable/search_black"
                        android:layout_height="60dp"
                        android:layout_width="60dp"/>

                <EditText
                        android:id="@+id/search_text"
                        android:maxLines="1"
                        android:textSize="25sp"

                        android:hint="Anything to search..."
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:elevation="24dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类搜索"
                android:fontFamily="@font/kaishu1"/>

            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bottom_button_qin"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kaishu1"
                    android:text="琴"
                    android:textColor="@color/deepGray"
                    android:textSize="30sp"
                    android:transitionName="bottom" />

                <Button

                    android:id="@+id/bottom_button_qi"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kaishu1"
                    android:text="棋"
                    android:textColor="@color/deepGray"
                    android:textSize="30sp"
                    android:transitionName="bottom" />

                <Button

                    android:id="@+id/bottom_button_shu"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kaishu1"
                    android:text="书"
                    android:textColor="@color/deepGray"
                    android:textSize="30sp"
                    android:transitionName="bottom" />

                <Button

                    android:id="@+id/bottom_button_hua"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:fontFamily="@font/kaishu1"
                    android:text="画"
                    android:textColor="@color/deepGray"
                    android:textSize="30sp"
                    android:transitionName="bottom" />


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>