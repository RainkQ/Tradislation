<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_back"
        tools:context=".activities.MainActivity"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

    <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            app:cardCornerRadius="24dp"
            android:elevation="24dp"
            app:cardBackgroundColor="@color/theme_cardview"
            android:layout_width="match_parent"
            android:layout_weight="5"
            android:layout_height="0dp">


        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <LinearLayout
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <ImageView
                        android:id="@+id/search_img"
                        android:background="@drawable/search_black"
                        android:layout_height="60dp"
                        android:layout_width="60dp"/>

                <EditText
                        android:id="@+id/search_text"
                        android:maxLines="1"
                        android:textSize="25sp"

                        android:hint="Anything to search..."
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:imeOptions="actionSearch"
                        android:inputType="text"/>
						android:transitionName="EditText"

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>


    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="24dp"
            android:elevation="24dp"
            app:cardBackgroundColor="@color/theme_cardview"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

        <LinearLayout
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TextView
                    android:text="分类搜索"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/bottom_button_qin"
                        android:transitionName="bottom"
                        style="?android:attr/buttonBarButtonStyle"
                        android:text="琴"
                        android:textColor="@color/deepGray"
                        android:textSize="25sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <Button

                        android:id="@+id/bottom_button_qi"
                        android:transitionName="bottom"
                        style="?android:attr/buttonBarButtonStyle"
                        android:text="棋"
                        android:textColor="@color/deepGray"
                        android:textSize="25sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <Button

                        android:id="@+id/bottom_button_shu"
                        android:transitionName="bottom"
                        style="?android:attr/buttonBarButtonStyle"
                        android:text="书"
                        android:textColor="@color/deepGray"
                        android:textSize="25sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>

                <Button

                        android:id="@+id/bottom_button_hua"
                        android:transitionName="bottom"
                        style="?android:attr/buttonBarButtonStyle"
                        android:text="画"
                        android:textColor="@color/deepGray"
                        android:textSize="25sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>


            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>